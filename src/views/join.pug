extends base.pug


block content
    if passwordErrorMessage
        span=passwordErrorMessage
        form(method="POST")
            input(placeholder="Name", name="name", type="text", value=name,required)
            input(placeholder="Email", name="email", type="email", value=email, required)
            input(placeholder="Username", name="username", type="text", value=username, required)
            input(placeholder="Password", name="password", type="password", required)
            input(placeholder="Confirm Password", name="password2", type="password", required)
            input(placeholder="Location", name="location", type="text", value=location, required)
            input(type="submit", value="Join")
            include partials/social-login
        div.auth-switch
            span Already have an account? 
            a(href="/login") Log in now &rarr;

    if duplicateErrorMessage
        span=duplicateErrorMessage
        form(method="POST")
            input(placeholder="Name", name="name", type="text", value=name,required)
            input(placeholder="Email", name="email", type="email", required)
            input(placeholder="Username", name="username", type="text", required)
            input(placeholder="Password", name="password", type="password", value=password, required)
            input(placeholder="Confirm Password", name="password2", type="password", value=password2, required)
            input(placeholder="Location", name="location", type="text", value=location, required)
            input(type="submit", value="Join")
            include partials/social-login
        div.auth-switch
            span Already have an account? 
            a(href="/login") Log in now &rarr;

    else 
        form(method="POST")
            input(placeholder="Name", name="name", type="text", required)
            input(placeholder="Email", name="email", type="email", required)
            input(placeholder="Username", name="username", type="text", required)
            input(placeholder="Password", name="password", type="password", required)
            input(placeholder="Confirm Password", name="password2", type="password", required)
            input(placeholder="Location", name="location", type="text", required)
            input(type="submit", value="Join")
            include partials/social-login
        div.auth-switch
            span Already have an account? 
            a(href="/login") Log in now &rarr;
